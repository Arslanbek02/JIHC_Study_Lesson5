<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:gravity="right"
        android:paddingRight="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClear"
            style="@style/button_sign_style"
            android:text="C" />

        <Button
            android:id="@+id/btnPlusMinus"
            style="@style/button_sign_style"
            android:text="+/-" />

        <Button
            android:id="@+id/btn_percent"
            style="@style/button_sign_style"
            android:text="%" />

        <Button
            android:id="@+id/btn_divide"
            style="@style/button_sign_style"
            android:text="/" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn9"
            style="@style/button_number_style"
            android:text="9" />

        <Button
            android:id="@+id/btn8"
            style="@style/button_number_style"
            android:text="8" />

        <Button
            android:id="@+id/btn7"
            style="@style/button_number_style"
            android:text="7" />

        <Button
            android:id="@+id/btn_multiple"
            style="@style/button_sign_style"
            android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn6"
            style="@style/button_number_style"
            android:text="6"/>

        <Button
            android:id="@+id/btn5"
            style="@style/button_number_style"
            android:text="5" />

        <Button
            android:id="@+id/btn4"
            style="@style/button_number_style"
            android:text="4" />

        <Button
            android:id="@+id/btn_minus"
            style="@style/button_sign_style"
            android:text="-" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn3"
            style="@style/button_number_style"
            android:text="3" />

        <Button
            android:id="@+id/btn2"
            style="@style/button_number_style"
            android:text="2" />

        <Button
            android:id="@+id/btn1"
            style="@style/button_number_style"
            android:text="1" />

        <Button
            android:id="@+id/btn_plus"
            style="@style/button_sign_style"
            android:text="+" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn0"
            style="@style/button_number_style"
            android:text="0"/>

        <Button
            android:id="@+id/btn9_dot"
            style="@style/button_number_style"
            android:text="." />

        <Button
            android:id="@+id/btn_empty"
            style="@style/button_number_style"
            android:text=" " />

        <Button
            android:id="@+id/btn_equal"
            style="@style/button_sign_style"
            android:text="=" />
    </LinearLayout>

</LinearLayout>